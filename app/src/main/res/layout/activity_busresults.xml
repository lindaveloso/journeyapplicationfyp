<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/_scrollview"
        android:layout_width="526dp"
        android:layout_height="596dp"
        android:clipToPadding="false"
        android:orientation="vertical"

        android:paddingRight="@dimen/activity_horizontal_margin">


        <RelativeLayout
            android:layout_width="504dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="40dp"
            android:paddingBottom="80dp">

            <TextView
                android:id="@+id/textview1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/luas_purple"
                android:padding="3dp"
                android:text="Route\t\t\t"
                android:textColor="@color/navtextcolor"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/textview1"
                android:background="@color/luas_purple"
                android:padding="3dp"
                android:text="Destination\t\t\t\t\t\t\t"
                android:textColor="@color/navtextcolor"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textview3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-22dp"
                android:layout_toRightOf="@id/textview2"
                android:background="@color/luas_purple"
                android:padding="3dp"
                android:text="Expected Time\t\t\t\t"
                android:textColor="@color/navtextcolor"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textview4"
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/textview3"
                android:background="@color/luas_purple"
                android:padding="3dp"
                android:text="Note\t\t\t\t"
                android:textColor="@color/navtextcolor"
                android:textSize="16sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="466dp"
                android:layout_below="@id/textview1"
                android:layout_marginTop="8dp"
                android:scrollbars="vertical" />

        </RelativeLayout>

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/BNV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:background="@color/nav"
        app:itemTextColor="@color/navtextcolor"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/navigationbottom_menu" />


</LinearLayout>