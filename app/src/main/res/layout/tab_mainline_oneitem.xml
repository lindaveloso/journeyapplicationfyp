<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardview_mainline"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textview_1destination"
        android:layout_width="182dp"
        android:layout_height="38dp"
        android:gravity="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/spaces"
        android:layout_width="61dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_1destination"
        android:layout_alignEnd="@+id/textview_1origintime"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="-61dp"
        android:layout_toLeftOf="@id/textview_1origintime" />


    <TextView
        android:id="@+id/textview_1origintime"
        android:layout_width="101dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_1destination"
        android:gravity="center_horizontal"
        android:textAlignment="center" />


    <TextView
        android:id="@+id/from"
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_1destination"
        android:layout_marginLeft="-24dp"
        android:layout_toRightOf="@+id/textview_1origintime"
        android:text="from" />

    <TextView
        android:id="@+id/origin_info"
        android:layout_width="151dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_1destination"
        android:layout_marginLeft="-72dp"
        android:layout_toRightOf="@+id/from" />

    <TextView
        android:id="@+id/textview_2due"
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="115dp"
        android:layout_toRightOf="@id/textview_1destination"
        android:textSize="18sp" />

    <TextView
        android:layout_width="51dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-70dp"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@id/textview_2due"
        android:text="mins"
        android:textSize="18sp" />


</RelativeLayout>
