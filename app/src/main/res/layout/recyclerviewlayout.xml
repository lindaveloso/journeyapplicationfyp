<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="401dp"
        android:layout_height="719dp"
        android:layout_marginEnd="0dp">

        <TextView
            android:id="@+id/textview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/bus"
            android:padding="3dp"
            android:text="Route\t\t\t"
            android:textColor="@color/navtextcolor"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textview2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/textview1"
            android:background="@color/bus"
            android:padding="3dp"
            android:text="Destination\t\t\t\t\t\t\t"
            android:textColor="@color/navtextcolor"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textview3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/textview2"
            android:background="@color/bus"
            android:padding="3dp"
            android:text="Expected Time\t\t\t\t"
            android:textColor="@color/navtextcolor"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textview4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/textview3"
            android:background="@color/bus"
            android:padding="3dp"
            android:text="Notes\t\t\t\t\t\t"
            android:textColor="@color/navtextcolor"
            android:textSize="15dp"
            android:textStyle="bold" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="462dp"
            android:layout_above="@+id/BNV"
            android:layout_marginBottom="101dp"
            android:scrollbars="vertical" />

        <TextView
            android:id="@+id/accesib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/BNV"
            android:layout_marginLeft="-312dp"
            android:layout_marginBottom="47dp"
            android:layout_toRightOf="@id/textview3"
            android:drawableLeft="@drawable/iconaccessible"
            android:padding="3dp"
            android:text=" Accessible"
            android:textColor="@color/navtextcolor"
            android:textSize="15dp"
            android:textStyle="bold" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/BNV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/nav"
            app:itemTextColor="@color/navtextcolor"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/navigationbottom_menu" />

    </RelativeLayout>


</RelativeLayout>